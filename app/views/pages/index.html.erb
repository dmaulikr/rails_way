<div class='text-center'>
  <h1 class='display-4 mt-5'>Rails Way</h1>

  <div class='row'>
    <div class='col-8 offset-2'>
      <%= image_tag 'train.gif', class: 'img-fluid mb-4' %>
    </div>
  </div>

  <h1><%= link_to 'Start!', game_path(level: 1), class: 'btn btn-primary btn-lg' %></h1>
</div>

<% content_for :navbar do %>
  <nav class='navbar fixed-bottom navbar-light bg-faded'>
    <div class='col text-center' style='color: #777;'>
      <%= fa_icon 'train' %><br><small>Level <%= params[:level] %></small>
    </div>

    <div class='col text-center' style='color: #777;'>
      <%= fa_icon 'clock-o' %><br>0:07
    </div>

    <div class='col text-center' style='color: #000;'>
      <%= fa_icon 'info-circle' %><br>
      <%= link_to 'About', about_path %>
    </div>
  </nav>
<% end %>
