<div class='row align-items-start'>
  <div id='railroads' class='row align-items-center m-5'>
    <% @blocks.each do |block| %>
      <%= image_tag "railsroads/#{block[:image]}.jpg", class: 'img-fluid p-1 col-6',
        data: { entrance: block[:entrance], exit: block[:exit] } %>
    <% end %>
  </div>
</div>

<div class='text-center'>
  <%= form_with url: check_game_path(params[:level]) do |f| %>
    <%= f.hidden_field :blocks_positions %>

    <h1><%= f.submit 'Check', class: 'btn btn-lg', data: { disable_with: 'Wait...' } %></h1>
  <% end %>
</div>

<div id='entrance-icon'></div>
<div id='exit-icon'>🏁</div>

<% content_for :navbar do %>
  <div class='col text-center'>
    <%= link_to games_path, id: 'quit-game' do %>
      <div style='width: 100%; height: 100%;'>
        <%= fa_icon 'times' %><br>Quit
      </div>
    <% end %>
  </div>

  <div class='col text-center'>
    <%= fa_icon 'clock-o' %><br><span id='timer'><%= @time %></span>
  </div>

  <div class='col text-center''>
    <%= fa_icon 'gamepad' %><br><small>Level <%= params[:level] %></small>
  </div>
<% end %>
